<!-- Scrolling Combat Text V0.1 -->
<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

	<Frame name="SCT_ANIMATION_FRAME" toplevel="true" enableMouse="false" parent="UIParent" frameStrata="HIGH" hidden="true">
		<Size>
			<AbsDimension x="24" y="24"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="60"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts>
	      	<OnUpdate>
	        		SCT:UpdateAnimation(self, elapsed);
	      	</OnUpdate>
		</Scripts>
	</Frame>

	<MessageFrame name="SCT_MSG_FRAME" insertMode="BOTTOM" parent="UIParent" frameStrata="HIGH" toplevel="true" >
		<Size>
			<AbsDimension x="600" y="70"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="210"/>
				</Offset>
			</Anchor>
		</Anchors>
		<FontString inherits="GameFontNormal" justifyH="CENTER">
			<FontHeight>
				<AbsValue val="20"/>
			</FontHeight>
		</FontString>
	</MessageFrame>
</Ui>
