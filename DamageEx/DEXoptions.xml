	<!-- Drag-able frame template -->
	<Frame name="DEXDragableFrameTemplate" movable="true" enableMouse="true" virtual="true">
		<Scripts>
			<OnLoad>
				self:SetUserPlaced(true)
				self:RegisterForDrag("LeftButton")
			</OnLoad>
			<OnDragStart> 
				self:StartMoving()
			</OnDragStart>
			<OnDragStop>
				self:StopMovingOrSizing()
			</OnDragStop>			
		</Scripts>
	</Frame>
	
