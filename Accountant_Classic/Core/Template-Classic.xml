<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

	<!-- Item Row Template -->
	<Button name="AccountantClassicTabTemplate" inherits="CharacterFrameTabButtonTemplate" mixin="AccountantClassicTabButtonMixin" virtual="true">
		<Scripts>
			<OnEnter method="OnEnter"/>
			<OnLeave method="OnLeave"/>
			<OnClick method="OnClick"/>
		</Scripts>
	</Button>

	<!-- Text rows -->
	<Frame name="AccountantClassicRowTemplate" virtual="true">
		<Size>
			<AbsDimension x="600" y="19"/>
		</Size>
		<Layers>
			<Layer level="BACKGROUND"/>
		</Layers>
		<Frames>
			<Button name="$parentTitle" parentKey="Title">
				<Size>
					<AbsDimension x="280" y="19" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="3" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_Text" parentKey="Text" inherits="GameFontNormal" wraponspaces="false" justifyH="LEFT">
							<Size>
								<AbsDimension x="280" y="19" />
							</Size>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnEnter>
						AccountantClassic_LogTypeOnShow(self);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button name="$parentIn" parentKey="In">
				<Size>
					<AbsDimension x="160" y="19" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="273" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_Text" parentKey="Text" inherits="NumberFontNormal" wraponspaces="false" justifyH="RIGHT">
							<Size>
								<AbsDimension x="160" y="19" />
							</Size>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnEnter>
						AccountantClassic_LogTypeOnShow(self);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
			<Button name="$parentOut" parentKey="Out">
				<Size>
					<AbsDimension x="160" y="19" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="434" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="$parent_Text" parentKey="Text" inherits="NumberFontNormal" wraponspaces="false" justifyH="RIGHT">
							<Size>
								<AbsDimension x="160" y="19" />
							</Size>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnEnter>
						AccountantClassic_LogTypeOnShow(self);
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
				</Scripts>
			</Button>
		</Frames>
	</Frame>
</Ui>
